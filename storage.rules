rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload images for listings
    match /animals/{fileName} {
      allow read: if true; // Anyone can read animal images
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Allow authenticated users to upload equipment images
    match /equipment/{fileName} {
      allow read: if true; // Anyone can read equipment images
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Allow authenticated users to upload land images
    match /land/{fileName} {
      allow read: if true; // Anyone can read land images
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Allow authenticated users to upload profile images
    match /profiles/{userId}/{fileName} {
      allow read: if true; // Anyone can read profile images
      allow write: if request.auth != null && request.auth.uid == userId; // Only the user can upload their own profile image
    }
    
    // Default rule - deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
